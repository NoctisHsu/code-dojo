{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2017",
      "es7",
      "es6",
      "dom"
    ],
    "strict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "baseUrl": ".",
    "outDir": "dist",
    "esModuleInterop": true,
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "../*/cypress/**/*"
  ]
}